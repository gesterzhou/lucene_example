export GEMIFRE=/Users/gzhou/git3/gemfire/open/geode-assembly/build/install/apache-geode

cd $GEMFIRE
bin/gfsh

start locator --name=locator1 --port=12345 --classpath=/Users/gzhou/git3/lucene_example/build/libs/lucene_example-0.0.1.jar

export APPDIR=/Users/gzhou/git/lucene_example
cd $APPDIR
./gradlew run -PappArgs="['50505', 'true']"

if needs to run another instance,
cd $APPDIR2
./gradlew run -PappArgs="['50506', 'true']"

